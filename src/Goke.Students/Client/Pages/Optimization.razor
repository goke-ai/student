                        new object[]{0, colors[0]},
                        new object[]{0.2, colors[1]},
                        new object[]{0.4, colors[2]},
                        new object[]{0.6, colors[3]},
                        new object[]{0.8, colors[4]},
                        new object[]{1, colors[5]},
                                                },
                    Showscale = true,
                },
                Opacity = 0.6F,
                Xaxis = $"x{count + 1}",
                Yaxis = $"y{count + 1}",
            };

            traces.Add(trace);

            count++;
        }

        var nrows = (traces.Count / 2) + (traces.Count % 2);

